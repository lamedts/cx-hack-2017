<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yo.cx.cxyo.DiscussFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/InFlightMeal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/rating_before" />

        <ImageButton
            android:id="@+id/LongTermTopic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.30"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/long_term_topic" />

        <ImageButton
            android:id="@+id/random_post"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.30"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/random_post" />

    </LinearLayout>

</FrameLayout>
