<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yo.cx.cxyo.FlightInfoFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@android:color/transparent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="15dp"
                android:background="@color/colorPrimaryDark"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:paddingBottom="15dp">
                <ImageView
                    android:layout_width="50dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:layout_gravity="right"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_take_off"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/flight_no"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:textSize="40dp"
                    android:textColor="@color/colorWhite"
                    android:text="Flight No"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="0.4">
                        <TextView
                            android:id="@+id/from_loc"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textSize="60dp"
                            android:textAllCaps="true"
                            android:layout_weight="0.4"
                            android:text="LOC"/>
                        <TextView
                            android:id="@+id/from_long_loc"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textAllCaps="true"
                            android:layout_weight="0.8"
                            android:text="Long"/>
                    </LinearLayout>
                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.2"
                        android:src="@drawable/ic_arrow"
                        android:gravity="center"
                        android:text="ICON"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_height="wrap_content"

                        android:orientation="vertical"
                        android:textSize="60dp"
                        android:layout_weight="0.4">
                        <TextView
                            android:id="@+id/to_loc"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textAllCaps="true"
                            android:textSize="60dp"
                            android:layout_weight="0.4"
                            android:text="LOC"/>
                        <TextView
                            android:id="@+id/to_long_loc"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textAllCaps="true"
                            android:gravity="center"
                            android:layout_weight="0.8"
                            android:text="Long"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="0.4">
                    <TextView
                        android:id="@+id/flight_info"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textSize="30dp"
                        android:layout_marginBottom="15dp"
                        android:textAllCaps="true"
                        android:textColor="@color/colorWhite"
                        android:layout_weight="0.4"
                        android:text="Flight Info"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:gravity="right"
                            android:text="Terminal: "
                            android:textColor="@color/colorWhite"
                            android:textSize="20dp" />
                        <TextView
                            android:id="@+id/terminal_info"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:layout_weight="0.4"
                            android:textColor="@color/colorWhite"
                            android:textSize="20dp"
                            android:text="--"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:gravity="right"
                            android:text="Gate: "
                            android:textColor="@color/colorWhite"
                            android:textSize="20dp" />
                        <TextView
                            android:id="@+id/gate_info"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:layout_weight="0.4"
                            android:textColor="@color/colorWhite"
                            android:textSize="20dp"
                            android:text="--"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:gravity="right"
                            android:text="Arrival Time: "
                            android:textColor="@color/colorWhite"
                            android:textSize="20dp" />
                        <TextView
                            android:id="@+id/time_info"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:layout_weight="0.4"
                            android:textColor="@color/colorWhite"
                            android:textSize="20dp"
                            android:text="--"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:gravity="right"
                            android:textColor="@color/colorWhite"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/info"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4"
                            android:gravity="left"
                            android:textColor="@color/colorWhite"
                            android:textSize="20dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:gravity="right"
                            android:text="Altitude: "
                            android:textColor="@color/colorWhite"
                            android:textSize="20dp" />
                        <TextView
                            android:id="@+id/ati_info"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:layout_weight="0.4"
                            android:textColor="@color/colorWhite"
                            android:textSize="20dp"
                            android:text="--"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:gravity="right"
                            android:text="Distance: "
                            android:textColor="@color/colorWhite"
                            android:textSize="20dp" />
                        <TextView
                            android:id="@+id/dis_info"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:layout_weight="0.4"
                            android:textColor="@color/colorWhite"
                            android:textSize="20dp"
                            android:text="--"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:gravity="right"
                            android:text="Latitude: "
                            android:textColor="@color/colorWhite"
                            android:textSize="20dp" />
                        <TextView
                            android:id="@+id/lat_info"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:layout_weight="0.4"
                            android:textColor="@color/colorWhite"
                            android:textSize="20dp"
                            android:text="--"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:gravity="right"
                            android:text="Longitude: "
                            android:textColor="@color/colorWhite"
                            android:textSize="20dp" />
                        <TextView
                            android:id="@+id/lng_info"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:layout_weight="0.4"
                            android:textColor="@color/colorWhite"
                            android:textSize="20dp"
                            android:text="--"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_weight="0.5"
                        android:src="@drawable/ic_cloud"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.5"
                        android:src="@drawable/ic_play_button"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.5"
                        android:src="@drawable/ic_newspaper"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_weight="0.5"
                        android:src="@drawable/ic_remote"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</FrameLayout>
