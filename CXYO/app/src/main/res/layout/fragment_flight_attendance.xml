<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/FlightAttendanceLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:weightSum="1"
    tools:context="com.yo.cx.cxyo.FlightAttendanceFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:id="@+id/request_container_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <ImageButton
            android:id="@+id/RequestButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="0.5"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_help"
            android:tint="@android:color/darker_gray" />

        <ImageButton
            android:id="@+id/ShoppingButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="0.5"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_shopping"
            android:tint="@android:color/darker_gray" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/request_content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/request_container_toolbar">

    </FrameLayout>


</LinearLayout>
